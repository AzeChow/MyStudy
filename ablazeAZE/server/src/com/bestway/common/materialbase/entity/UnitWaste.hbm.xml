<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class  lazy="false"  name="com.bestway.common.materialbase.entity.UnitWaste" table="unitwaste">
		<cache usage="read-write"/>
        <id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
	    </id>
		<property name="exgNo" length="225"/>
		<property name="ptNo" length="225"/>	
		<property name="waste"/>
		<property name="unitWaste"/>
		<property name="isMainMateriel"/>
		<property name="meterSource" length="100"/>	
		<property name="unitDosage"/>
		<many-to-one lazy="false"      name="company" column="coid" class="com.bestway.bcus.system.entity.Company" index="unitwaste_company"/>
    </class>

</hibernate-mapping>
