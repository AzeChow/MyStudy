<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  lazy="false"  name="com.bestway.common.dataexport.entity.TxtDBTaskDetail" 
		table="TxtDBTaskDetail">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<property name="seqNum"/>
		<property name="taskType"/>		
		<many-to-one lazy="false"      name="txtDBTask" column="txtDBTask"
			 class="com.bestway.common.dataexport.entity.TxtDBTask"/>
			 
	    <many-to-one lazy="false"      name="txtToDBRegion" column="txtToDBRegion"
			 class="com.bestway.common.dataexport.entity.TxtToDBRegion" />
        <many-to-one lazy="false"      name="dbToTxtRegion" column="dbToTxtRegion"
			 class="com.bestway.common.dataexport.entity.DBToTxtRegion" />
		<many-to-one lazy="false"      name="jdbcSqlEvent" column="jdbcSqlEvent"
			 class="com.bestway.common.dataexport.entity.JDBCSqlEvent" />
		<many-to-one lazy="false"      name="subTxtDBTask" column="subTxtDBTask"
			 class="com.bestway.common.dataexport.entity.TxtDBTask" />

	    
		<many-to-one lazy="false"      name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" />
	</class>

</hibernate-mapping>