<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  lazy="false"  
		name="com.bestway.common.fpt.entity.FptEmailParamver" 
		table="fptemailparamver">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<property name="popServer"/>
		<property name="smptServer" />
		<property name="userName" />
		<property name="password" />
		<property name="myEmailAdress"/>
		<property name="smtpport" />
		<property name="poppport" />
		<property name="type" />
		<property name="showName" />
		<property name="isAuthenticator" />
		<many-to-one lazy="false"      name="company" column="companyId" 
			class="com.bestway.bcus.system.entity.Company" index="transraconitbl_company"/>
	</class>
</hibernate-mapping>