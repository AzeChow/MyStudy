<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  lazy="false"  name="com.bestway.bcus.cas.parameterset.entity.CasBillOption" 
		table="casBillOption">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<property name="isBillRepeat"/>
		<property name="isInitBillNo"/>		
		<property name="isDoubleClickBillState"/>
		<property name="isShowStocks"/>
		<property name="isInNeedCustomer"/>
		<property name="isOutNeedCustomer"/>
		<property name="isNoticeBillNo"/>
		<property name="isWorkShopBack"/>
		<property name="isBackWorkShop"/>
		<property name="isInChangeHouseMateriel"/>
		<property name="isOutChangeHouseMateriel"/>
		<property name="isInChangeHouseProduct"/>
		<property name="isOutChangeHouseProduct"/>
		<property name="isShowBillCorrRecord" column="isSBCR"/>
		<property name="showBillCorrRecord"/>
		<many-to-one lazy="false" name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" index=""/>
	</class>
</hibernate-mapping>
		