<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  lazy="false"  name="com.bestway.bcus.cas.parameterset.entity.LotControl" 
		table="lotControl">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>	
		<property name="isWorkshopImportNeedLot"/>
		<property name="isWorkshopBackNeedLot"/>
		<property name="isDirectExportNeedLot"/>
		<property name="isTransferFactoryExportNeedLot"/>
		<many-to-one lazy="false" name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" index=""/>
	</class>
</hibernate-mapping>
		