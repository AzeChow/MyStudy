<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class lazy="false" 
		name="com.bestway.bcus.cas.invoice.entity.CasInvoice" 
		table="casInvoice">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<property name="invoiceNo"/>
		<property name="validDate"/>
		<property name="emsNo"/>
		<property name="canceled"/>
		<property name="tempNo"/>
		<many-to-one lazy="false" name="customer" column="customer" 
			class="com.bestway.common.materialbase.entity.ScmCoc" />
		<many-to-one lazy="false" name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" 
			index="fgsortinfo_company"/>
		
	</class>
</hibernate-mapping>
		