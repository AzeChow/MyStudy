<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class lazy="false" 
		name="com.bestway.bcus.cas.entity.LMateriel" 
		table="lMateriel">
		<!--<cache usage="read-write"/>-->
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<many-to-one lazy="false" name="leftoverMateriel" 
			class="com.bestway.bcus.cas.entity.LeftoverMateriel" 
			index="leftoverMateriel_l"/>
		<property name="ptNo"/>
		<property name="name"/>
		<property name="spec"/>
		<property name="note"/>
		<many-to-one lazy="false" name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" 
			index="leftoverMC_company"/>
	</class>
</hibernate-mapping>
		