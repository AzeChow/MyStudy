<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class  lazy="false"  name="com.bestway.bcus.system.entity.RenderDataColumn" table="RenderDataColumn">
       	<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
		<property name="className"/>
       	<property name="key" column="hashKey"/>
       	<property name="name"/>
       	<property name="isShow"/>
		<many-to-one lazy="false"      name="company" column="coid" class="com.bestway.bcus.system.entity.Company"/>
    </class>

</hibernate-mapping>
