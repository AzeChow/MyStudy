<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class  lazy="false"  name="com.bestway.bcus.dataimport.entity.TxtTaskEx" 
		table="txttaskex">
		<cache usage="read-write"/>
		<id name="id" column="id" length="32">
			<generator class="uuid.hex"/>
		</id>
					 
	    <property name="taskname" length="225"/>
		<property name="excutekind" length="10"/>
		<property name="excuteday" length="10"/>	
		<property name="excutetime" length = "10"/>
		<property name="note" length="225"/>	
		<property name="inputSelect" length="10"/>
		<property name="createdate"/>
		<property name="executeState"/>
		<property name="createuser" />
		<property name="iseffice"/>	
		<property name="efficeDate"/>
		<property name="isParentTask"/>
		<many-to-one lazy="false"      name="company" column="coid" 
			class="com.bestway.bcus.system.entity.Company" index="txttaskex_company"/>
	</class>

</hibernate-mapping>