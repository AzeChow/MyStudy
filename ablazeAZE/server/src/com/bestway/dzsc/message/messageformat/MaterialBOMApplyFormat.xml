<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="eportmsg.xsl"?>
<!--Element message: 此元素内所有内容及属性描述一个报文的定义及从数据库的获取途径。-->
<message version="1.0" type="MaterielBomApply">
	<description>Bom申报报文定义及获取方法描述</description>
	<section-flag>PTS_DATA</section-flag>
	<sub-section>
		<description>签名信息</description>
		<file-name>PtsSignFormat.xml</file-name>
	</sub-section>
	<sub-section>
		<description>物料表头信息</description>
		<file-name>MaterielHeadFormat.xml</file-name>
	</sub-section>
	<section multiple="false" required="true">
		<description>企业BOM表体</description>
		<section-flag>PTS_ENT_BOM_LIST</section-flag>
		<section multiple="false" required="true">
			<description>企业BOM</description>
			<section-flag>PTS_ENT_BOM</section-flag>
			<data-id>MaterielBomDataId</data-id>
			<field nullable="false" signNo="1">
				<description>成品货号</description>
				<field-name>
					versionApply.bomMasterApply.materiel.ptNo</field-name>
				<format>X(30)</format>
				<field-flag>COP_EXG_NO</field-flag>
			</field>
			<field nullable="true" signNo="2">
				<description>成品版本号时间</description>
				<field-name>versionApply.beginDate</field-name>
				<format>Z(8)</format>
				<field-flag>EXG_VERSION_DATE</field-flag>
			</field>
			<field nullable="false" signNo="3">
				<description>料件货号</description>
				<field-name>materiel.ptNo</field-name>
				<format>X(30)</format>
				<field-flag>COP_IMG_NO</field-flag>
			</field>
			<field nullable="false" signNo="4">
				<description>净耗</description>
				<field-name>unitWaste</field-name>
				<format>Z(8)9.9(9)</format>
				<field-flag>DEC_CM</field-flag>
			</field>
			<field nullable="false" signNo="5">
				<description>损耗率</description>
				<field-name>waste</field-name>
				<format>Z(3)9.9(5)</format>
				<field-flag>DEC_DM</field-flag>
			</field>
			<field nullable="false" signNo="6">
				<description>修改标志</description>
				<field-name>customsModifyMark</field-name>
				<format>X(1)</format>
				<field-flag>MODIFY_MARK</field-flag>
			</field>
			<field nullable="false" signNo="7">
				<description>成品版本号</description>
				<field-name>versionApply.version</field-name>
				<format>Z(8)9</format>
				<field-flag>EXG_VERSION</field-flag>
			</field>
			<field nullable="true" signNo="8">
				<description>备注</description>
				<field-name></field-name>
				<format>X(10)</format>
				<field-flag>NOTE</field-flag>
			</field>
		</section>
	</section>
</message>
