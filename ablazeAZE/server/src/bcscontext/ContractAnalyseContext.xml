<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<!--==================DAO Beans====================-->
	<bean id="contractAnalyseDao" class="com.bestway.bcs.contractanalyse.dao.ContractAnalyseDao">
              <property name="sessionFactory"><ref bean="sessionFactory"/></property>
	</bean>
	
	
	<!--==================Logic Beans====================-->
	<bean id="contractAnalyseLogic" class="com.bestway.bcs.contractanalyse.logic.ContractAnalyseLogic">
              <property name="contractAnalyseDao"><ref bean="contractAnalyseDao"/></property>
			  <property name="contractStatDao"><ref bean="contractStatDao"/></property> 
			  <property name="contractStatLogic"><ref bean="contractStatLogic"/></property> 
  			  <property name="contractDao"><ref bean="contractDao"/></property> 
	</bean>

	<!--==================Action Bean====================-->
	<bean id="contractAnalyseAction" class="com.bestway.bcs.contractanalyse.action.ContractAnalyseActionImpl">
			  <property name="contractAnalyseLogic"><ref bean="contractAnalyseLogic"/></property>
			  <property name="contractStatLogic"><ref bean="contractStatLogic"/></property>
	</bean>
	

</beans>