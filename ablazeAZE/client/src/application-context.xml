<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean  id="messageSource" 
  	    class="org.springframework.context.support.ResourceBundleMessageSource">
  	  <property name="basenames">
  	  	<list>
  	  		<value>com.bestway.bcus.client.resources.messages</value>
  	  	</list>
  	  </property>
  	</bean>



	<bean id="imageResourcesFactory" 
  	    class="org.springframework.context.support.ResourceMapFactoryBean">
  	  <property name="locations">
  	  	<list>
  	  	  	  <value>classpath:com/bestway/bcus/client/resources/images.properties</value>
  	  	</list>
  	  </property>
  	  <property name="resourceBasePath"><value>com/bestway/bcus/client/resources/</value></property>
  	</bean>

	<bean  id="imageSource" 
  	    class="com.bestway.client.resource.DefaultImageSource">
		<constructor-arg index="0">
			<value>true</value>
		</constructor-arg>
	  	<constructor-arg index="1">
			<ref bean="imageResourcesFactory"/>
		</constructor-arg>
  	</bean>
	
	<bean  id="iconSource" 
  	    class="com.bestway.client.resource.DefaultIconSource">
  	  <constructor-arg index="0"><ref bean="imageSource"/></constructor-arg>
  	</bean>
	
	
	
	
	
	
	
	
	<bean id="rcpImageResourcesFactory" 
  	    class="org.springframework.context.support.ResourceMapFactoryBean">
  	  <property name="locations">
  	  	<list>
  	          <value>classpath:com/bestway/bcus/client/resources/rcpimages.properties</value>
  	  	</list>
  	  </property>
  	  <property name="resourceBasePath"><value>com/bestway/bcus/client/resources/</value></property>
  	</bean>
	<bean  id="rcpImageSource" 
  	    class="com.bestway.client.resource.DefaultImageSource">
		 <constructor-arg index="0">
			<value>true</value>
		 </constructor-arg>
		 <constructor-arg index="1">
			<ref bean="rcpImageResourcesFactory"/>
		</constructor-arg>
  	</bean>
	<bean  id="rcpIconSource" 
  	    class="com.bestway.client.resource.DefaultIconSource">
  	  <constructor-arg index="0"><ref bean="rcpImageSource"/></constructor-arg>
  	</bean>
  	
</beans>